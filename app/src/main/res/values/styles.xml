<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppThemeLoading" parent="android:Theme.Light">
        <item name="android:windowBackground">@drawable/shakebackground</item>
        <!-- //@null黑屏  @drawable/icon放一张启动图片 -->
        <item name="android:windowNoTitle">true</item>
        <!-- >//启动界面是否显示应用名称 true不显示 false显示 -->
    </style>

    <style name="et_orange">
        <item name="android:background">@drawable/sl_edittext</item>
        <item name="android:textSize">@dimen/txtSize14</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="layout_style">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_common">
        <item name="android:textSize">@dimen/txtSize14</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_txtSize13">
        <item name="android:textSize">@dimen/txtSize13</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>